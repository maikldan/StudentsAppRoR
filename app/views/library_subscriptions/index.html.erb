<p id="notice"><%= notice %></p>

<h1>Library Subscriptions</h1>

<table>
  <thead>
    <tr>
      <th>Status</th>
      <th>Start date</th>
      <th>End date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @library_subscriptions.each do |library_subscription| %>
      <tr>
        <td><%= library_subscription.status %></td>
        <td><%= library_subscription.start_date %></td>
        <td><%= library_subscription.end_date %></td>
        <td><%= link_to 'Show', library_subscription %></td>
        <td><%= link_to 'Edit', edit_library_subscription_path(library_subscription) %></td>
        <td><%= link_to 'Destroy', library_subscription, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Library Subscription', new_library_subscription_path %>
